<% content_for(:page_title, event.name) %>

<div class="block group border border-b-0 rounded rounded-b-none border-gray-200 bg-gray-100 p-0 h-60" style="background: url(<%= event.image_url %>)  no-repeat center center fixed">
  <div class="float-left m-2">
    <%= render('events/live') %>
  </div>
  <div class="float-right m-2">
    <%= render('events/badge') %>
  </div>
</div>
<div class="block group border border-t-0 rounded rounded-t-none border-gray-200 bg-white p-3">
  <div class="grid grid-cols-3">
    <div class="flex">
      <div>
        <div class="m-3 rounded-full border-primary bg-gray-100 p-2 text-secondary text-xs">
          👩‍💻 Online
        </div>
      </div>
      <div>
        <div class="m-3 rounded-full border-primary bg-gray-100 p-2 text-secondary text-xs">
          👾 Wonder
        </div>
      </div>
    </div>
    <div class="flex m-3">
      hosted by <%= link_to(user_image(event.user, image_class: 'rounded-full mx-2 bg-primary w-6 h-6'), event.user) %>
      at <%= link_to(event.location.name, event.location, class: 'mx-2 underline') %>
    </div>
    <div class="flex">
      <%= participation_link(event, link_class: 'flex-grow m-3 rounded-full border-4 border-primary bg-gray-100 p-2 text-secondary text-center text-xs font-bold') %>
    </div>
  </div>
  <div>
    <div class="p-3">
      <h2 class="text-xl"><%= event.name %></h2>
      <div class="">
        <%= markdown(event.description) %>
      </div>
    </div>
    <div class="p-3">
    </div>
    <% if event.topics.present? %>
      <h3>Speaker</h3>
      <div class="grid grid-cols-1 gap-y-8 sm:grid-cols-2 sm:gap-x-5 sm:gap-y-6 md:grid-cols-3 lg:col-span-3">
        <% event.topics.each do |topic| %>
        <div class="block group border rounded border-gray-200 bg-gray-100 p-3">
          <figure class="grid grid-cols-1 gap-y-8 grid-cols-2">
            <div class="relative p-3">
              <%= link_to(user_image(topic.user, image_class: 'rounded-full border-primary bg-gray-100 h-20'), topic.user) %>
            </div>
            <figcaption class="mt-3">
              <p class="text-sm font-medium text-gray-900"><%= user.name %></p>
              <p class="text-sm text-gray-500"><%= topic.name %></p>
            </figcaption>
          </figure>
        </div>
        <% end %>
      </div>
    <% end %>

    <% if event.users.present? %>
      <h3><strong>Members</strong> registered</h3>
      <div class="flex flex-wrap">
        <% event.users.each do |user| %>
        <div class="m-3">
          <%= link_to(user_image(user, image_class: 'border-4 rounded border-primary bg-primary w-20 h-20'), user) %>
        </div>
        <% end %>
      </div>
    <% end %>

  </div>
</div>
