<div class="grid grid-cols-1 gap-y-8 sm:grid-cols-2 sm:gap-x-5 sm:gap-y-6 md:grid-cols-3 lg:col-span-3">
  <% events.each do |event| %>
    <%= link_to(event, title: event.name, class: "block group border rounded border-gray-200 bg-gray-100") do %>
      <figure class="grid grid-cols-1 gap-y-8 grid-cols-2">
        <div class="relative">
          <%= image_tag(event.image_url, alt: event.name) %>
        </div>
        <figcaption class="mt-3 ml-3">
          <p class="text-sm font-medium text-gray-900"><%= event.name %></p>
          <p class="text-sm text-gray-500"><%= l(event.date, format: :short) %></p>
          <p class="flex p-2">
            <% event.users.each do |user| %>
              <%= user_image(user, image_class: 'mr-2 rounded-full border-primary bg-gray-100 h-5') %>
            <% end %>
          </p>
        </figcaption>
      </figure>
    <% end %>
  <% end %>
</div>
